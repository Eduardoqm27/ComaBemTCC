<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ofertas Especiais</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>

<header>
    <div class="header-container">
        <img src="/img/logoCB.png" alt="Imagem Logo" class="logo"/>
        <form action="/pesquisar" method="GET" class="search-form">
            <input type="text" name="query" placeholder="Pesquisar produtos..." class="search-input" />
            <button type="submit" class="search-btn"><i class="bi bi-search"></i></button>
        </form>
        <a href="/carrinho" class="cart-link">
            <i class="bi bi-cart4 cart-icon"></i>
        </a>
    </div>
</header>

<nav class="menu-lateral">
    <ul class="ul">
        <li class="item-menu"><a href="/">Início</a></li>
        <li class="item-menu"><a href="/produto/categoria">Categorias</a></li>
        <li class="item-menu"><a href="/user/login">Usuário</a></li>
        <li class="item-menu"><a href="/carrinho">Carrinho</a></li>
    </ul>
</nav>

<div class="content">
    <h2>Ofertas Especiais</h2>
    <div class="produtos-grid">
        <% produtosPromocao.forEach(produto => { %>
            <div class="card-produto">
                <img src="/img/<%= produto.imagem %>" alt="<%= produto.nome_produto %>">
                <h3><%= produto.nome_produto %></h3>
                <p>Preço: R$ <%= (Number(produto.preco) * 0.9).toFixed(2) %></p>
                <a href="/produto/<%= produto.id %>">Ver Detalhes</a>
            </div>
        <% }) %>
    </div>
</div>

</body>
</html>
