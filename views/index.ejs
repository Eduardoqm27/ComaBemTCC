<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ComaBem TCC - Início</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <header>
        <a href="/"><img src="/img/logo.png" alt="Logo"></a>
        <button class="menu-button" onclick="toggleMenu()">☰ Menu</button>
        <div id="menu" class="menu">
            <ul>
                <li><a href="/auth/login">Login</a></li>
                <li><a href="/auth/cadastro">Cadastro</a></li>
                <li><a href="/carrinho"><img src="/img/cart.png" alt="Carrinho"></a></li>
            </ul>
        </div>
    </header>
    <div class="dropdown">
        <a href="/frutas">Frutas</a>
        <a href="/legumes">Legumes</a>
        <a href="/verduras">Verduras</a>
        <a href="/kits">Kits</a>
    </div>
    <main>
        <% produtos.forEach(produto => { %>
            <div class="product-card">
                <img src="<%= produto.imagem %>" alt="<%= produto.nome %>">
                <h3><%= produto.nome %></h3>
                <p><%= produto.descricao %></p>
                <p class="price">R$ <%= produto.preco %></p>
                <a href="/produto/<%= produto.id %>" class="add-to-cart">Ver Detalhes</a>
            </div>
        <% }) %>
    </main>
    <footer>
        <p>&copy; 2024 ComaBem TCC</p>
    </footer>
    <script src="/js/scripts.js"></script>
</body>
</html>
