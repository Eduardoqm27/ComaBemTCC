<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <title>ComaBemTCC</title>
</head>
<body>
    <header>
        <img src="/img/logo.png" alt="Logo" class="logo" onclick="window.location.href='/'">
        <div class="actions">
            <img src="/img/cart.png" alt="Carrinho" onclick="window.location.href='/carrinho'">
            <button class="menu-button" onclick="toggleMenu()">☰</button>
        </div>
    </header>

    <div class="categories-dropdown">
        <button onclick="window.location.href='/categoria/verduras'">Verduras</button>
        <button onclick="window.location.href='/categoria/legumes'">Legumes</button>
        <button onclick="window.location.href='/categoria/frutas'">Frutas</button>
        <button onclick="window.location.href='/categoria/kits'">Kits</button>
    </div>

    <div class="menu" id="menu">
        <button onclick="window.location.href='/login'">Login</button>
        <button onclick="window.location.href='/cadastro'">Cadastro</button>
    </div>

    <main>
        <div class="search-bar">
            <form action="/search" method="get">
                <input type="text" name="query" placeholder="Pesquisar produtos..." required>
                <button type="submit">Pesquisar</button>
            </form>
        </div>
        <div class="products">
            <% produtos.forEach(produto => { %>
                <div class="product">
                    <img src="<%= produto.imagem %>" alt="<%= produto.nome %>">
                    <h3><%= produto.nome %></h3>
                    <p><%= produto.descricao %></p>
                    <p>R$ <%= produto.preco %></p>
                    <a href="/produto/<%= produto.id %>">Ver detalhes</a>
                </div>
            <% }) %>
        </div>
    </main>

    <footer>
        <p>&copy; 2024 ComaBemTCC - Todos os direitos reservados.</p>
        <button class="about-button" onclick="window.location.href='/sobre-nos'">Sobre Nós</button>
    </footer>

    <script>
        function toggleMenu() {
            const menu = document.getElementById('menu');
            menu.style.display = menu.style.display === 'none' || !menu.style.display ? 'flex' : 'none';
        }
    </script>
</body>
</html>