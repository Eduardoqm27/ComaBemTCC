<main class="content">
    <% if (user && user.isLoggedIn) { %>
        <button class="btn-adicionar" onclick="window.location.href='/adicionar'">Adicionar</button>
    <% } %>

    <section class="carrossel">
        <img src="/img/destaque1.jpg" alt="Destaque 1">
        <img src="/img/destaque2.jpg" alt="Destaque 2">
        <img src="/img/destaque3.jpg" alt="Destaque 3">
    </section>

    <section class="produtos-grid">
        <% if (produtos && produtos.length > 0) { %>
            <% produtos.forEach(produto => { %>
                <% if (produto.destaque) { %> <!-- Exibe apenas os produtos em destaque -->
                    <div class="card-produto">
                        <img src="/img/<%= produto.imagem %>" alt="<%= produto.nome_produto %>" class="card-img-top" loading="lazy">
                        <div class="card-body">
                            <h5 class="card-title"><%= produto.nome_produto %></h5>
                            <div class="price">R$ <%= parseFloat(produto.preco).toFixed(2).replace('.', ',') %></div>
                        </div>
                    </div>
                <% } %>
            <% }) %>
        <% } else { %>
            <p>Nenhum produto encontrado.</p>
        <% } %>
    </section>
</main>
