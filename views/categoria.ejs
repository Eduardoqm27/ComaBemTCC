<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Categorias de Produtos</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <header>
        <div class="header-container">
            <img src="/img/logoCB.png" alt="Imagem Logo" class="logo"/>
            <form action="/pesquisar" method="GET" class="search-form">
                <input type="text" name="query" placeholder="Pesquisar produtos..." class="search-input" />
                <button type="submit" class="search-btn"><i class="bi bi-search"></i></button>
            </form>
            <a href="/carrinho" class="cart-link">
                <i class="bi bi-cart4 cart-icon"></i>
            </a>
        </div>
    </header>

    <nav class="menu-lateral">
        <div class="btn-expandir">
            <i class="bi bi-list"></i>
        </div>

        <ul class="ul">
            <li class="item-menu"><a href="/" class="icon"><i class="bi bi-house"></i><span class="txt-link">Início</span></a></li>
            <li class="item-menu"><a href="/produto/categoria" class="icon"><i class="bi bi-columns-gap"></i><span class="txt-link">Categorias</span></a></li>
            <li class="item-menu"><a href="/user/login" class="icon"><i class="bi bi-person-bounding-box"></i><span class="txt-link">Usuário</span></a></li>
            <li class="item-menu"><a href="/carrinho" class="icon"><i class="bi bi-cart4"></i><span class="txt-link">Carrinho</span></a></li>
        </ul>
    </nav>

    <div class="content">
        <h2>Categorias de Produtos</h2>
        <div class="filtro-categorias">
            <button class="filtro" data-categoria="verdura">Verduras</button>
            <button class="filtro" data-categoria="legume">Legumes</button>
            <button class="filtro" data-categoria="fruta">Frutas</button>
            <button class="filtro" data-categoria="kits">Kits</button>
            <button class="filtro" data-categoria="todas">Todas</button>
        </div>

        <!-- Botão para adicionar novo produto -->
        <button id="btnAdicionar" class="btn btn-primary">Adicionar Novo Produto</button>
        
        <!-- Formulário de adição de produto -->
        <div id="formContainer" style="display: none;">
            <h3>Formulário para Adicionar Novo Produto</h3>
            <form action="/produto/adicionar" method="POST" enctype="multipart/form-data">
                <input type="text" name="nome_produto" placeholder="Nome do Produto" required>
                <input type="text" name="marca" placeholder="Marca do Produto" required>
                <input type="text" name="origem" placeholder="Origem do Produto" required>
                <textarea name="descricao" placeholder="Descrição do Produto"></textarea>
                <input type="file" name="imagem" accept="image/*" required>
                <input type="number" name="preco" placeholder="Preço" required>
                <select name="categoria" required>
                    <option value="verdura">Verdura</option>
                    <option value="legume">Legume</option>
                    <option value="fruta">Fruta</option>
                    <option value="kits">Kits</option>
                </select>
                <label>
                    <input type="checkbox" name="promocao"> Em Promoção
                </label>
                <label>
                    <input type="checkbox" name="destaque"> Destaque
                </label>
                <button type="submit">Adicionar Produto</button>
            </form>
        </div>

        <div class="produtos-grid">
            <% produtos.forEach(produto => { %>
                <div class="card-produto" data-categoria="<%= produto.categoria %>">
                    <img src="/img/<%= produto.imagem %>" alt="<%= produto.nome_produto %>">
                    <h3><%= produto.nome_produto %></h3>
                    <p>Marca: <%= produto.marca %></p>
                    <p>Origem: <%= produto.origem %></p>
                    <p>Preço: R$ <%= produto.promocao ? (Number(produto.preco) * 0.9).toFixed(2) : Number(produto.preco).toFixed(2) %></p>
                    <a href="/produto/<%= produto.id %>">Ver Mais</a>
                </div>
            <% }) %>
        </div>
    </div>

    <footer>
        <p>&copy; 2024 ComaBemTCC</p>
    </footer>

    <script src="/public/js/scripts.js"></script>
    <script>
        // Mostrar o formulário de adicionar produto quando clicar no botão
        document.getElementById('btnAdicionar').addEventListener('click', () => {
            const formContainer = document.getElementById('formContainer');
            formContainer.style.display = formContainer.style.display === 'none' ? 'block' : 'none';
        });

        document.querySelectorAll('.filtro').forEach(btn => {
            btn.addEventListener('click', () => {
                const categoria = btn.getAttribute('data-categoria');
                document.querySelectorAll('.card-produto').forEach(card => {
                    if (categoria === 'todas' || card.getAttribute('data-categoria') === categoria) {
                        card.style.display = 'block';
                    } else {
                        card.style.display = 'none';
                    }
                });
            });
        });
    </script>
</body>
</html>
