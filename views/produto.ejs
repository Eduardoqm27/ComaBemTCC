<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Listagem de Produtos</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <header>
        <h1>Listagem de Produtos</h1>
        <a href="/" class="logo">
            <img src="/img/logo.png" alt="Logo">
        </a>
        <nav>
            <a href="/produtos">Listar Produtos</a>
            <a href="/produtos/adicionar">Adicionar Produto</a>
        </nav>
    </header>

    <main>
        <h2>Produtos Disponíveis</h2>
        <table>
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Categoria</th>
                    <th>Descrição</th>
                    <th>Preço</th>
                    <th>Imagem</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <% produtos.forEach(produto => { %>
                    <tr>
                        <td><%= produto.nome_produto %></td>
                        <td><%= produto.categoria %></td>
                        <td><%= produto.descricao %></td>
                        <td><%= produto.preco %></td>
                        <td><img src="<%= produto.imagem %>" alt="Imagem do Produto" width="100"></td>
                        <td>
                            <a href="/produtos/editar/<%= produto.id %>">Editar</a>
                            <form action="/produtos/deletar/<%= produto.id %>" method="post" style="display:inline;">
                                <button type="submit">Excluir</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </main>

    <footer>
        <p>© 2024 ComaBem. Todos os direitos reservados.</p>
    </footer>
</body>
</html>