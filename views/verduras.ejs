<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Verduras</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <header>
        <!-- Inclua o conteÃºdo do header aqui -->
    </header>
    <main>
        <h1>Verduras</h1>
        <div class="products">
            <% verduras.forEach(verdura => { %>
                <div class="product-card">
                    <img src="<%= verdura.imagem %>" alt="<%= verdura.nome %>" class="product-image">
                    <div class="product-description" style="display: none;">
                        <p><%= verdura.descricao %></p>
                    </div>
                </div>
            <% }); %>
        </div>
    </main>
    <footer>
        <!-- Inclua o conteÃºdo do footer aqui -->
    </footer>
</body>
</html>