<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Categoria: Kits</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f5f5f5;
            margin: 0;
            padding: 0;
        }

        .header {
            background-color: #28a745;
            padding: 15px;
            text-align: center;
            color: white;
        }

        .product-container {
            display: grid;
            grid-template-columns: repeat(5, 1fr);
            gap: 20px;
            padding: 20px;
        }

        .product-card {
            background-color: #fff;
            padding: 15px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        .product-card img {
            width: 100%;
            height: auto;
            border-radius: 4px;
        }

        .product-card h3 {
            margin-top: 10px;
            color: #333;
        }

        .product-card p {
            font-weight: bold;
            color: #28a745;
        }
    </style>
</head>
<body>

    <div class="header">
        <h1>Kits</h1>
    </div>

    <div class="product-container">
        <% if (produtos && produtos.length > 0) { %>
            <% produtos.forEach(produto => { %>
                <div class="product-card">
                    <img src="/uploads/<%= produto.imagem %>" alt="<%= produto.nome_produto %>">
                    <h3><%= produto.nome_produto %></h3>
                    <p>Pre√ßo: R$ <%= produto.preco.toFixed(2).replace('.', ',') %></p>
                </div>
            <% }); %>
        <% } else { %>
            <p>Nenhum produto encontrado nesta categoria.</p>
        <% } %>
    </div>

</body>
</html>
